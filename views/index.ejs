<!Doctype html>

<head>
    <title>Redis Tasks</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/cerulean/bootstrap.min.css">
    <style>
        .delete:checked+span {
            color: red;
        }

        .task-list {
            list-style: lower-alpha;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" aria-expanded="false">RedisTasks</a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        <form method="post" action="/task/add">
            <lable>Add Taks</lable>
            <input type="text" name="task" placeholder="Add task">
            <input type="submit" value="Submit">

        </form>

        <%= title %>
            <form method="post" action="/task/delete">
                <ul class="task-list">
                    <% tasks.forEach(function(task){ %>
                        <li>
                            <label>
                                <input type="checkbox" name="tasks" class="delete" value="<%= task %>" <span>
                                <%= task %>
                                    </span>
                            </label>
                        </li>
                        <% }) %>
                </ul>
                <input type="submit" value="Remove">
            </form>


            <div class="well">
                <h3>Next Business Call</h3>
                Name:
                <span>
                    <%= call['name'] %>
                </span>
                <br> Company:
                <span>
                    <%= call['phone'] %>
                </span>
                <br> Phone:
                <span>
                    <%= call['company'] %>
                </span>
                <br> Time:
                <span>
                    <%= call['time'] %>
                </span>
                <br>
            </div>


            <h3> EDIT NEXT CALL</h3>
            <form method="POST" action="/call/add">
                <label> Name</label>
                <input type="text" name="name" placeholder="Name">
                <br></br>
                <label>Phone</label>
                <input type="text" name="phone" placeholder="Phone">
                <br></br>
                <label>Company</label>
                <input type="text" name="company" placeholder="Company">
                <br></br>
                <label>Time</label>
                <input type="time" name="time" placeholder="Time">
                <input type="submit" value="Save">
            </form>
    </main>
</body>

</html>